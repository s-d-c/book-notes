<div class="container">
	<h1>My Books</h1>
</div>

<% notebooks.forEach(function(book){ %>
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
			<img class="img-responsive center-block img-thumbnail" src="<%= book.dataValues.imageUrl %>">
		</div>

		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
			<h3><%= book.dataValues.title %></h3>
			<h4>By <%= book.dataValues.author %></h4>
		</div>
		
		<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
			<form action="/my-books/<%= book.dataValues.id %>" method="GET">
				<input type="submit" value="Open" class="btn btn-primary">
			</form>	
			<form action="/my-books/<%= book.dataValues.id %>" method="DELETE">
				<input type="hidden" name="notebookId" value="<%= book.dataValues.id %>">
				<input type="submit" value="Remove" class="btn btn-primary">
			</form>
		</div>		
	</div>
</div>



<% }) %>